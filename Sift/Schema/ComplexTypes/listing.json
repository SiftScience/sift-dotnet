{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Listing",
  "type": "object",
  "properties": {
    "$subject": {
      "type": [ "string", "null" ]
    },
    "$body": {
      "type": [ "string", "null" ]
    },
    "$contact_email": {
      "type": [ "string", "null" ]
    },
    "$contact_address": {
      "$ref": "address.json"
    },
    "$locations": {
      "type": [ "array", "null" ],
      "items": { "$ref": "address.json" }
    },
    "$listed_items": {
      "type": [ "array", "null" ],
      "items": { "$ref": "item.json" }
    },
    "$images": {
      "type": [ "array", "null" ],
      "items": { "$ref": "image.json" }
    },
    "$expiration_time": {
      "type": [ "integer", "null" ]
    }
  }
}

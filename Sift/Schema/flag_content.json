{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "FlagContent",
  "type": "object",
  "required": [ "$type" ],
  "properties": {
    "$type": {
      "type": "string",
      "default": "$flag_content"
    },
    "$user_id": {
      "type": [ "string", "null" ]
    },
    "$session_id": {
      "type": [ "string", "null" ]
    },
    "$content_id": {
      "type": [ "string", "null" ]
    },
    "$flagged_by": {
      "type": [ "string", "null" ]
    },
    "$reason": {
      "type": [ "string", "null" ]
    },
    "$app": {
      "oneOf": [
        { "$ref": "ComplexTypes/app.json" },
        { "type": "null" }
      ]
    },
    "$browser": {
      "oneOf": [
        { "$ref": "ComplexTypes/browser.json" },
        { "type": "null" }
      ]
    }
  }
}
